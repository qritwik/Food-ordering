<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"

    tools:context=".success">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/sum_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_bold"
            android:text=""
            android:textColor="#212121"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/sum_success_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sum_order_id"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="14dp"
            android:fontFamily="@font/nunito"
            android:text=""
            android:textSize="12dp" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1.4dp"
            android:layout_below="@id/sum_success_subtitle"
            android:background="#e0e0e0"/>

        <LinearLayout

            android:id="@+id/ll098"
            android:layout_below="@id/line1"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_height="55dp">

            <ImageView
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/res_suc"
                android:layout_weight="3.3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout

                android:layout_weight="0.7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/sum_res_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:fontFamily="@font/nunito_light"
                        android:text=""
                        android:textColor="#212121"
                        android:textSize="14dp" />


                </RelativeLayout>




            </LinearLayout>


        </LinearLayout>



        <LinearLayout

            android:id="@+id/ll097"
            android:layout_below="@id/ll098"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_height="55dp">

            <ImageView
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/home"
                android:layout_weight="3.3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout

                android:layout_weight="0.7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView

                        android:id="@+id/sum_home_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:fontFamily="@font/nunito_light"
                        android:text=""
                        android:textColor="#212121"
                        android:textSize="13dp" />

                </RelativeLayout>





            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1.4dp"
            android:layout_below="@id/ll097"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="@dimen/padding_10"
            android:background="#e0e0e0" />




        <LinearLayout

            android:id="@+id/ll096"
            android:layout_below="@id/line2"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_height="55dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/av_hate"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="12dp"



                app:lottie_autoPlay="true"
                app:lottie_fileName="done.json"
                app:lottie_loop="true"/>
            <LinearLayout

                android:layout_weight="0.7"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView


                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:fontFamily="@font/nunito_light"
                        android:text="Order Successfully Placed"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="12dp" />


                </RelativeLayout>




            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll095"
            android:layout_marginTop="24dp"

            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/ll096">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView


                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/nunito_light"
                    android:text="BILL DETAILS"
                    android:textColor="#212121"
                    android:textSize="12dp" />


            </RelativeLayout>




        </LinearLayout>






        <LinearLayout
            android:id="@+id/ll094"
            android:layout_below="@id/ll095"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito"
                android:text="Final Price"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="#616161" />

            <TextView
                android:id="@+id/sum_price_item_tot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="14dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito"
                android:gravity="right"
                android:text=""
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="#616161" />
        </LinearLayout>












    </RelativeLayout>


</ScrollView>