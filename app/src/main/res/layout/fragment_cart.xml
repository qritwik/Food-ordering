<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <TextView
        android:id="@+id/cart_res_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_black"
        android:text="Cart Items"
        android:textColor="@color/colorPrimary"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/cart_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cart_res_name"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="14dp"
        android:fontFamily="@font/nunito"
        android:text=""
        android:textSize="13dp" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_below="@id/cart_item_price"
        android:background="#90a4ae"/>

    <android.support.v7.widget.RecyclerView
        android:background="#ffffff"

        android:id="@+id/rv_cart"
        android:layout_above="@id/line5"

        android:layout_width="match_parent"
        android:layout_below="@id/line1"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>



    <View

        android:layout_marginTop="5dp"
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"

        android:layout_above="@id/rl1"
        android:background="#90a4ae"/>



    <RelativeLayout

        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="172dp">

        <LinearLayout

            android:id="@+id/ll_order"
            android:layout_above="@id/ll3"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito"
                    android:hint="Apply Coupon"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="#616161" />



                <TextView
                    android:gravity="right"
                    android:id="@+id/btn_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="14dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/nunito_black"
                    android:text="APPLY"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="#616161" />
            </LinearLayout>


            <View
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="2dp"
                android:id="@+id/line8"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="#cfd8dc"/>




            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito"
                    android:text="Item Total"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="#616161" />

                <TextView
                    android:id="@+id/cart_tot_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="14dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito"
                    android:gravity="right"
                    android:text=""
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="#616161" />
            </LinearLayout>




            <View
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="2dp"
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_above="@id/rl1"
                android:background="#cfd8dc"/>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito"
                    android:text="Discount"
                    android:textColor="#7cb342"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                     />

                <TextView
                    android:id="@+id/cart_tot_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="14dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito"
                    android:gravity="right"
                    android:text="@string/price_dis"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="#7cb342"/>
            </LinearLayout>

            <View
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="2dp"
                android:id="@+id/line67"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_above="@id/rl1"
                android:background="#cfd8dc"/>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:textColor="#616161"
                    android:fontFamily="@font/nunito"
                    android:text="Delivery Charges"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    />

                <TextView
                    android:id="@+id/cart_del_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="14dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito"
                    android:gravity="right"
                    android:text=""
                    android:textColor="#616161"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                     />
            </LinearLayout>



        </LinearLayout>

     <LinearLayout
         android:id="@+id/ll3"
         android:layout_alignParentBottom="true"
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:orientation="horizontal"
         android:weightSum="2">

         <Button
             android:id="@+id/btn_empty"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:background="#eceff1"
             android:fontFamily="@font/nunito_black"
             android:text="REMOVE"
             android:textColor="#263238" />

         <Button
             android:id="@+id/btn_proceed"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:background="@color/colorPrimary"
             android:fontFamily="@font/nunito_black"
             android:text=""
             android:textColor="#ccffffff" />

     </LinearLayout>

    </RelativeLayout>

</RelativeLayout>


