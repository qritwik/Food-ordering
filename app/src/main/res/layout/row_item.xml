<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <LinearLayout
       android:layout_marginTop="23dp"
       android:id="@+id/ll123"
       android:layout_width="match_parent"
       android:weightSum="4"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <LinearLayout
           android:layout_weight="2.9"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageView
               android:id="@+id/item_picture"
               android:layout_width="120dp"
               android:scaleType="fitXY"
               android:layout_marginLeft="14dp"
               android:layout_height="120dp"
               android:src="@drawable/pizza"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:weightSum="4"
           android:orientation="vertical">



           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:orientation="vertical">


               <TextView
                   android:id="@+id/item_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="start"
                   android:layout_marginLeft="15dp"
                   android:layout_marginRight="40dp"
                   android:fontFamily="@font/nunito_semibold"
                   android:paddingRight="40dp"
                   android:text="name"
                   android:textColor="#555555"
                   android:textSize="15dp" />

               <TextView
                   android:id="@+id/item_cuisine_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"

                   android:fontFamily="@font/nunito_light"
                   android:text="cuisine_name"
                   android:textSize="12dp" />

           </LinearLayout>





           <View
               android:layout_width="match_parent"
               android:layout_height="0.3dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginTop="9dp"
               android:background="#e0e0e0" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:orientation="horizontal"
               android:weightSum="8">

               <TextView
                   android:id="@+id/item_price"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="15dp"
                   android:layout_weight="8"
                   android:fontFamily="@font/nunito"
                   android:gravity="left"
                   android:text="@string/cart_row"
                   android:textSize="14dp" />


               <ImageView
                   android:id="@+id/item_veg"
                   android:layout_width="13dp"
                   android:layout_height="13dp"
                   android:layout_gravity="center_vertical|right"
                   android:layout_marginRight="33dp"
                   android:layout_weight="1"
                   android:src="@drawable/veg" />


           </LinearLayout>


       </LinearLayout>




   </LinearLayout>


    <View
        android:layout_below="@id/ll123"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#cecece"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/item_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/plus"
        app:backgroundTint="@android:color/transparent"
        app:elevation="1dp"
        app:fabCustomSize="40dp"
        app:fabSize="mini"
        app:rippleColor="@android:color/holo_orange_dark" />

</RelativeLayout>